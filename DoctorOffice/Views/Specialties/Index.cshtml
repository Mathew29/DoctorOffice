@{
  Layout = "_Layout";
}

<h1>Specialties Available</h1>
<hr />
<h2>Specialties:</h2>

@if (Model.Count != 0)
{
  <ul>
    @foreach (var specialty in Model)
    {
      <li><a href='/specialties/@specialty.GetId()'>@specialty.GetName()</a></li>
    }
  </ul>
}

<h4><a href="/specialties/new">Add a new specialty</a></h4>
<h4><a href="/">Return home</a></h4>
